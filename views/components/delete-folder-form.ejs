<article>
  <form action="/folder/<%= folder.id %>/delete" method="POST">
    <hgroup>
      <h2>Are you sure you want to delete this folder?</h2>
      <p>All files in this folder will be lost.</p>
      <br />
      <div role="group">
        <a href="/" role="button" class="secondary">Cancel</a>
        <input type="submit" value="Confirm" role="button" />
      </div>
    </hgroup>
  </form>
</article>
