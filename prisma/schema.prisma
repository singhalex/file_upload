generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  username String   @unique
  password String
  folders  Folder[]
  files    File[]
}

model Folder {
  id     Int    @id @default(autoincrement())
  name   String
  User   User   @relation(fields: [userId], references: [id])
  userId String
  files  File[]
}

model File {
  id       Int    @id @default(autoincrement())
  name     String
  url      String
  size     Int
  Folder   Folder @relation(fields: [folderId], references: [id])
  folderId Int
  User     User   @relation(fields: [userId], references: [id])
  userId   String
}

// Used to store session data
model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
